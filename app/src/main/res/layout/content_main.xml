<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context=".MainActivity"
    tools:showIn="@layout/app_bar_main">
    <android.support.design.widget.FloatingActionButton
        android:layout_width="wrap_content"
        android:id="@+id/fab"
        android:layout_height="wrap_content"
        app:fabSize="normal"
       android:src="@drawable/ic_settings"
        app:layout_anchor="@id/bottom_bar"
        />

    <android.support.design.bottomappbar.BottomAppBar
        android:id="@+id/bottom_bar"
        android:layout_width="match_parent"
        android:layout_gravity="bottom"
        android:backgroundTint="@color/colorPrimary"
        app:fabAttached="true"
        app:fabAlignmentMode="end"
        android:layout_height="@dimen/mtrl_bottomappbar_height" />


    <LinearLayout
        android:orientation="vertical"
        android:padding="20dp"
        android:layout_marginBottom="90dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="wrap_content">
                <android.support.v7.widget.CardView
                    android:foreground="?android:attr/selectableItemBackground"
                    app:cardCornerRadius="7dp"
                    app:cardUseCompatPadding="true"
                    app:cardElevation="4dp"
                    android:clickable="true"
                    android:layout_width="160dp"
                    android:layout_height="190dp">
                    <View

                        android:layout_width="match_parent"
                        android:background="#263238"
                        android:layout_height="2dp"
                        android:layout_marginTop="130dp"
                        />

                    <View
                        android:layout_alignParentStart="true"
                        android:layout_width="8dp"
                        android:background="#2fa881"
                        android:layout_height="match_parent"
                         android:layout_marginTop="10dp"
                        android:layout_marginBottom="80dp"/>

                    <ImageView
                        android:src="@drawable/ic_manage_icon"
                        android:layout_marginBottom="50dp"
                        android:layout_gravity="center"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:background="@drawable/draw_manage" />
                    <TextView
                        android:textSize="15dp"
                        android:layout_gravity="center"
                        android:textStyle="bold"
                        android:text="MANAGE ORDER"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
               <TextView
                   android:text="Manage All Taken Orders Here"
                   android:gravity="center"
                   android:layout_gravity="bottom|center"
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content" />
                </android.support.v7.widget.CardView>

            </LinearLayout>
            <LinearLayout
                android:layout_weight="1"
                android:gravity="right"
                android:layout_width="0dp"
                android:layout_height="wrap_content">
                <android.support.v7.widget.CardView

                    android:foreground="?android:attr/selectableItemBackground"
                    app:cardCornerRadius="7dp"
                    app:cardUseCompatPadding="true"
                    app:cardElevation="4dp"
                    android:clickable="true"
                    android:layout_width="160dp"
                    android:layout_height="190dp">
                    <View

                        android:layout_width="match_parent"
                        android:background="#263238"
                        android:layout_height="2dp"
                        android:layout_marginTop="130dp"
                        />
                    <ImageView
                        android:src="@drawable/ic_place_black_24dp"
                        android:background="@drawable/draw_stats"
                        android:layout_marginBottom="50dp"
                        android:layout_gravity="center"
                        android:layout_width="40dp"
                        android:layout_height="40dp" />
                    <TextView
                        android:textSize="15dp"
                        android:layout_gravity="center"
                        android:text="BOOK TABLE"
                        android:layout_width="wrap_content"
                        android:textStyle="bold"
                        android:layout_height="wrap_content" />
<TextView
    android:text="Find Free Tables Around?"
    android:gravity="center"
    android:layout_gravity="bottom|center"
    android:layout_width="match_parent"
    android:layout_height="wrap_content" />
                </android.support.v7.widget.CardView>


            </LinearLayout>

        </LinearLayout>
      <LinearLayout
          android:padding="10dp"
          android:layout_width="match_parent"
          android:layout_height="wrap_content">
          <LinearLayout
              android:gravity="right"
              android:layout_weight="1"
              android:layout_width="0dp"
              android:layout_marginRight="10dp"
              android:layout_height="wrap_content">
              <android.support.v7.widget.CardView
                  android:foreground="?android:attr/selectableItemBackground"
                  app:cardCornerRadius="7dp"
                  app:cardUseCompatPadding="true"
                  app:cardElevation="3dp"
                  android:clickable="true"
                  android:layout_width="130dp"
                  android:layout_height="60dp">
                  <ImageView
                      android:src="@drawable/ic_survey"
                      android:layout_marginRight="40dp"
                      android:layout_gravity="center"
                      android:background="@drawable/draw_survey"
                      android:layout_width="25dp"
                      android:layout_height="25dp" />
                  <TextView
                      android:textStyle="bold"
                      android:text="Survey"
                      android:layout_gravity="center"
                      android:layout_width="wrap_content"
                      android:layout_height="wrap_content" />

              </android.support.v7.widget.CardView>
          </LinearLayout>

      <LinearLayout
          android:layout_weight="1"
          android:layout_width="0dp"
          android:layout_marginLeft="10dp"
          android:layout_height="wrap_content">
          <android.support.v7.widget.CardView
              android:foreground="?android:attr/selectableItemBackground"
              app:cardCornerRadius="7dp"
              app:cardUseCompatPadding="true"
              app:cardElevation="3dp"
              android:clickable="true"
              android:layout_width="130dp"
              android:layout_height="60dp">

              <ImageView
                  android:src="@drawable/ic_account_balance_wallet_black_24dp"
                  android:layout_marginRight="40dp"
                  android:layout_gravity="center"
                  android:background="@drawable/draw_wallet"
                  android:layout_width="25dp"
                  android:layout_height="25dp" />
            <TextView
                android:textStyle="bold"
                android:layout_gravity="center"
                android:text="Wallet"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
          </android.support.v7.widget.CardView>

      </LinearLayout>
      </LinearLayout>
        <LinearLayout
            android:layout_margin="10dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <android.support.v7.widget.CardView
               android:backgroundTint="#B388FF"
                android:foreground="?android:attr/selectableItemBackground"
                app:cardCornerRadius="7dp"
                app:cardUseCompatPadding="true"
                app:cardElevation="6dp"
                android:clickable="true"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <ImageView
                    android:src="@drawable/ic_favorite_black_24dp"
                    android:layout_marginRight="100dp"
                    android:layout_gravity="center"
                    android:background="@drawable/draw_fav"
                    android:layout_width="40dp"
                    android:layout_height="40dp" />
                <TextView
                    android:textStyle="bold"
                    android:textSize="20dp"
                    android:layout_gravity="center"
                    android:text="Favorites"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <TextView
                    android:layout_margin="2dp"
                    android:layout_gravity="right|bottom"
                    android:text="Add Some Taste?"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </android.support.v7.widget.CardView>

        </LinearLayout>


    </LinearLayout>




</android.support.design.widget.CoordinatorLayout>